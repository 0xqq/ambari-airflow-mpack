<configuration>
  <!--Configuration options for user authentication into the web application-->
  <property>
    <name>airflow_install_dir</name>
    <value>/usr/local</value>
    <display-name>Airflow install folder</display-name>
    <description>The home folder where airflow will be installed.</description>
    <value-attributes>
      <overridable>false</overridable>
      <editable-only-at-install>true</editable-only-at-install>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>airflow_user</name>
    <value>airflow</value>
    <display-name>Airflow user</display-name>
    <description></description>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>airflow_group</name>
    <value>airflow</value>
    <display-name>Airflow group</display-name>
    <description></description>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>airflow_pid_file</name>
    <value>/usr/local/airflow/config/airflow-webserver.pid</value>
    <display-name>Airflow PID file</display-name>
    <description></description>
    <on-ambari-upgrade add="true"/>
  </property>

</configuration>
